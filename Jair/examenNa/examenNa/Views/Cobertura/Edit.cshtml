@model examenNa.Models.Cobertura

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <form asp-action="Edit">
            <div class="col-md-12">
                <section class="content-header">
                    <h1>Crear Nueva cobertura </h1>
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    <div asp-validation-summary="All" class="text-danger"></div>
                </section>
            </div>

            <section class="content">
                <div class="col-md-12">
                    <div class=" box box-primary">
                        <input type="hidden" asp-for="IdCobertura" />
                        @Html.HiddenFor(model => model.IdCobertura)
                        <div class=" box-body">
                            @{Html.RenderPartial("EditCreate", Model);}
                        </div>
                        <div class="box-footer ">
                            <div class="pull-right">
                                @Html.ActionLink("Listado", "Index",  new { @class = "btn btn-info", type = "button" }) 
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
}

